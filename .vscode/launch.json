{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug test.js",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/examples/test.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    // cross-env NODE_ENV=development electron ./examples/index.js
    {
      "name": "Electron Main",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/examples/main.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "protocol": "inspector"
    },
    {
      "name": "Electron Renderer",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["${workspaceFolder}/examples/main.js", "--remote-debugging-port=9222"],
      "webRoot": "${workspaceRoot}/examples"
    }
  ]
}
